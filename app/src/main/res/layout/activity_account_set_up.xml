<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_LogIn">


        <FrameLayout
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">


            <LinearLayout
                android:layout_gravity="center|bottom"
                android:padding="10dp"
                android:layout_marginBottom="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/no_hint_txt_input"
                        android:layout_width="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:boxBackgroundColor="#EEEEEE"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Full Name"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/no_hint_txt_input"
                        android:layout_width="60dp"
                        app:boxBackgroundColor="#EEEEEE"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Age"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/no_hint_txt_input"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:boxBackgroundColor="#EEEEEE"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Address"
                            android:inputType="text"/>


                    </com.google.android.material.textfield.TextInputLayout>


                    <ImageView
                        android:background="@drawable/txt_bg"
                        android:padding="14dp"
                        android:layout_gravity="center"
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/locate_svgrepo_com" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    style="@style/no_hint_txt_input"
                    android:layout_width="match_parent"
                    app:boxBackgroundColor="#EEEEEE"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    style="@style/no_hint_txt_input"
                    android:layout_width="match_parent"
                    app:boxBackgroundColor="#EEEEEE"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    style="@style/no_hint_txt_input"
                    android:layout_width="match_parent"
                    app:boxBackgroundColor="#EEEEEE"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <ImageView
                android:layout_gravity="center|top"
                android:layout_marginTop="80dp"
                android:id="@+id/imageView"
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:src="@drawable/accountfind" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="@style/bold_txt_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Just a Few Clicks Left!" />

            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                style="@style/regular_txt_style"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Donâ€™t worry your Information are\nSafe and Secured with Us! " />

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="5dp"
                    style="@style/regular_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We Use Phone Number as Usernames" />

                <TextView
                    android:textColor="@color/strokeColor"

                    style="@style/regular_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/learnMore" />

            </LinearLayout>



            <androidx.appcompat.widget.AppCompatButton
                android:fontFamily="@font/montserrat_semibold"
                android:id="@+id/button"
                android:textColor="@color/white"
                android:background="@drawable/btn_style"
                android:textAllCaps="false"
                android:layout_gravity="bottom|center"
                android:layout_width="wrap_content"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Finish Set Up" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
