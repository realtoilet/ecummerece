<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="no_hint_txt_input">
        <item name="boxStrokeColor">@color/txt_input</item>
        <item name="cursorColor">@color/black</item>
        <item name="hintEnabled">false</item>
       <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="bold_txt_style">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular_txt_style">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/transparent_black</item>
    </style>

</resources>